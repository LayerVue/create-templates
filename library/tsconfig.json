{
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@docs/*": ["docs/*"],
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules", "*.config.ts","docs"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
